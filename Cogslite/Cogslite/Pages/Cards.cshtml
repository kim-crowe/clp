@page

@model CardsPageModel
@{
    ViewData["Title"] = "Cards - " + Model.Game.Name;
}
@section Scripts
    {
    <script type="text/javascript" src="~/js/services/cardservice.js"></script>
    <script type="text/javascript" src="~/js/card.js"></script>
}
<input type="hidden" id="af-token" value="@Html.AntiForgeryTokenOnly()" />
<input type="hidden" id="game-id" value="@Model.Game.Id" />
<div id="cardApp">
    <div class="cardsPanel fullwidth">
        <div>
            <img src="@Url.Page("/Image", new { imageId = @Model.Game.Id })" width="100" height="140" style="float: left" />
            <div class="card-game-title">
                <span>@Model.Game.Name</span>
                @if (Model.IsSignedIn)
                {
                    <span style="float: right; margin:3px;">
                        <a asp-page="/UploadCards" asp-route-id="@Model.Game.Id" class="btn btn-primary">Upload cards</a>
                    </span>
                }
            </div>
        </div>
        <div class="form-inline">
            <div class="form-group mt-2 mx-2">
                <input type="text" placeholder="Filter on card name..." v-model="search.cardName" class="form-control" />
            </div>
            <div class="form-group mt-2 mx-2">
                <b-select v-model="search.cardType" class="form-control">

                    @foreach (var type in Model.Game.CardTypes.IndexedList())
                    {
                        <option value="@type.Index">@type.Value</option>
                    }
                </b-select>
            </div>
            <div class="form-group mt-2 mx-2">
                <select class="selectpicker" id="tags" multiple title="Filter by tags..." data-live-search="true">
                    @foreach (var tag in Model.Tags)
                    {
                        <option>@tag</option>
                    }
                </select>
            </div>
            <div class="btn-group btn-group-toggle mt-2" data-toggle="buttons">
                <label class="btn btn-secondary active">
                    <input type="radio" name="options" id="option1" autocomplete="off" checked> All Cards
                </label>
                <label class="btn btn-secondary">
                    <input type="radio" name="options" id="option2" autocomplete="off"> Deck Only
                </label>
            </div>
            <span class="mx-auto"></span>
            <div class="input-group mt-2 mx-2">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-clone"></i></span>
                </div>
                <button class="btn btn-dark active">{{deck.name}} <span class="badge badge-light">{{deck.items.length}}</span></button>
            </div>
            <div class="dropdown mt-2 mx-2">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Deck options
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">New deck</a>
                    <a class="dropdown-item" href="#">Load Deck</a>
                </div>
            </div>
            <ul class="pagination justify-content-center form-group mt-2">
                <li class="page-item"><a class="page-link" href="#" v-on:click="firstPage"><i class="fa fa-angle-double-left"></i></a></li>
                <li class="page-item"><a class="page-link" href="#" v-on:click="previousPage"><i class="fa fa-angle-left"></i></a></li>
                <li class="page-item active"><a class="page-link" href="#">Page {{search.page}} of {{numberOfPages}}</a></li>
                <li class="page-item"><a class="page-link" href="#" v-on:click="nextPage"><i class="fa fa-angle-right"></i></a></li>
                <li class="page-item"><a class="page-link" href="#" v-on:click="lastPage"><i class="fa fa-angle-double-right"></i></a></li>
            </ul>
        </div>
        <ul class="card-list" style="clear: both">
            <li class="card-info" v-for="card in cards">
                <div class="card m-2">
                    <img class="card-img-top" v-bind:src="imageUrl(card)" style="width: 210px; height: 280px;" />
                    <div class="card-img-overlay show-on-hover card-options text-center">
                        <button class="btn btn-warning" v-on:click="showDetails(card)" style="margin-top: 200px;">Details</button>
                    </div>
                    <div class="card-body p-0">
                        <p class="text-center text-truncate mt-2">{{card.name}}</p>
                    </div>
                </div>
            </li>
        </ul>
    </div>    
</div>