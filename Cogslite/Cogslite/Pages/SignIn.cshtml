@page
@model SignInModel
@{
    ViewData["Title"] = "SignIn";
}

<div class="main">
    <h2>Sign In</h2>
    <br />
    <div class="alert alert-danger @ViewData.WhenContains("Message", "", "collapse")">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>@ViewData["Message"]</strong>
    </div>
    <form method="post" class="form">

        <p class="form-paragraph">
            <label for="emailAddress" class="form-label"><b>Email Address</b></label>
            <input type="text" name="emailAddress" required class="form-input">
        </p>
        <p class="form-paragraph">
            <label for="password" class="form-label"><b>Password</b></label>
            <input type="password" name="password" required class="form-input">
        </p>
        <br/>
        <input type="submit" class="btn btn-primary" value="Sign In" />

    </form>
</div>
