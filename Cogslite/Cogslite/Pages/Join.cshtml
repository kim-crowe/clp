@page
@model Cogslite.Pages.JoinModel
@{
    ViewData["Title"] = "Join";
}

<h2>Join</h2>

<br />
<form method="post" asp-page="Join">

    <div class="alert alert-danger @ViewData.WhenContains("Message", "", "collapse")">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>@ViewData["Message"]</strong>
    </div>

    <p>
        <label for="username"><b>Username</b></label>
        <input type="text" name="username" value="@ViewData["UserName"]" required />
    </p>

    <p>
        <label for="password"><b>Password</b></label>
        <input type="password" name="password" required />
    </p>

    <p>
        <label for="confirmPassword"><b>Confirm password</b></label>
        <input type="password" name="confirmPassword" required />
    </p>

    <input type="submit" class="btn btn-primary" value="Join" />

</form>

