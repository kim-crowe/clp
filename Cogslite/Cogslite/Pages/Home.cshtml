@page
@model HomeModel
@{
    ViewData["Title"] = "Home page";
}

<div class="main">
    <br />
    <div style="display: inline-block; float: right; margin-top: 8px;">
        @if (Model.IsSignedIn)
        {
            <a asp-page="/GameDetails" class="btn btn-primary">Add Game</a>
        }
    </div>
    <ul class="game_list">
        @foreach (var game in Model.Games)
        {
            <li class="game-info">
                <div class="game-image">
                <a href="@Url.Page("/Cards", new {gameId = game.Id})">
                    <img src="@Url.Page("/Image", new { imageId = game.Id })" width="100" height="140" />
                </a>
                </div>
                <div class="game-details">
                    <h3>@game.Name</h3>
                    <div>Created: <span>@game.CreatedOn</span></div>
                    <div>Uploaded by:<span>@game.Owner.Username</span> </div>
                    <div style="display: inline-block; float: right; margin-top: 8px;">
                        @if (Model.IsSignedIn)
                        {
                            <a asp-page="/UploadCards" asp-route-id="@game.Id" class="btn btn-primary">Add cards</a>
                        }
                    </div>
                </div>
            </li>
        }
    </ul>
</div>